<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/StudentDescribtion_card_view"
        android:layout_width="360dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="24dp"
        android:foreground="@drawable/rectangle_background_menu"
        android:foregroundTint="#262C2A2A"
        android:foregroundTintMode="multiply"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="45dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#342D3E"
        app:strokeWidth="5dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/avatar_image_view_in_card_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground"
            app:shapeAppearanceOverlay="@style/circleImageView"
            app:strokeColor="#4D000000"
            app:strokeWidth="1dp" />

        <TextView
            android:id="@+id/StudentDescribtion_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/gilroy_bold"
            android:text="@string/n_n_z"
            android:textColor="#090909"
            android:textSize="15sp" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>